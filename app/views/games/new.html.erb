<h1>Welcome to the longest word-game!</h1>
<p>Here is your grid:</p>
<p><%= @grid %></p>
<form action="/score" method="get" data-turbo="false">
  <input type="text" name="word" placeholder="What is your longest word?">
  <input type="submit" value="Submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :time, @initial_time %>
  <%= hidden_field_tag :grid, @grid %>
</form>
